<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnChemotphan"
        android:layout_width="136dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:text="Che một phần"
        android:onClick="momanhinhMotphan"
        app:layout_constraintEnd_toStartOf="@+id/btnChetoanbo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnChetoanbo"
        android:layout_width="133dp"
        android:layout_height="56dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="100dp"
        android:text="Che toàn bộ"
        android:onClick="moManhinhToanbo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>